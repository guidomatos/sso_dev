@{
    Layout = "~/Views/Shared/_LayoutSSO.cshtml";
}

<body class="background-01">
    <!--Se agrega control de trafico adicional de Google Analytics-->
    <!-- Google Tag Manager (noscript) -->
    <noscript>
        <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-594PBW" height="0" width="0"
            style="display:none;visibility:hidden"></iframe>
    </noscript>
    <!-- End Google Tag Manager (noscript) -->

    <div class="overlay">

        <div class="container">
            <div class="row">
                <div class="col background-01-desktop clearfix">
                    <div class="logo">
                        <img src="../img/upc-white.png" />
                    </div>

                    <div class="mb-72  ml-md-32 mr-md-64">
                        <h3 class="title">Login UPC</h3>
                    </div>
                </div>

                <div class="col bg-white">

                    <form action="#" class="mt-48 mt-md-36 mb-md-64">
                        <div class="toast p-8">
                            <div class="text-center text-danger error">
                                <p class="font-14 mb-0">
                                    <span class="icon-circle">!</span> <span class="toast-title"></span>
                                </p>
                                <p class="font-14 toast-message"></p>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="input-user" class="sr-only">Usuario UPC</label>
                            <div class="input-icon">
                                <span class="icon-user"></span>
                                <input type="text" id="input-user" class="form-control" name="user"
                                    placeholder="Usuario UPC" autofocus required />
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="input-password" class="sr-only">Contraseña</label>
                            <div class="input-icon">
                                <span class="icon-lock"></span>
                                <input type="password" id="input-password" name="password" class="form-control"
                                    placeholder="Contraseña" required />
                            </div>
                        </div>

                        <div class="clearfix"></div>

                        <div class="form-group mt-32">
                            <button class="btn btn-block btn-primary" id="btn-login">
                                Inicia sesión &nbsp; <span class="glyphicon glyphicon-refresh spin hide"></span>
                            </button>
                        </div>

                        <p class="text-center mt-32">
                            <a href="#" id="link-forgot-pass" class="">¿Olvidaste tu contraseña?</a>
                        </p>
                    </form>

                </div>
            </div>

            <div class="row" style="padding-top:20px">
                <p>&copy; @DateTime.Now.Year - SSO UPC</p>
            </div>

        </div>

    </div>

    @Scripts.Render("~/bundles/login")

    @*
        <script src="~/Scripts/jquery-3.4.1.min.js"></script>
        <script src="~/Scripts/constants.js"></script>
        <script src="~/Scripts/login.js"></script>
    *@

</body>
